<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/px124"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/left_btn"
            android:layout_width="@dimen/px48"
            android:layout_height="@dimen/px48"
            android:layout_marginStart="@dimen/px40"
            android:gravity="center"
            android:src="@drawable/pop_close" />

        <TextView
            android:id="@+id/middle_txt"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/px36"
            android:paddingTop="@dimen/px26"
            android:paddingRight="@dimen/px36"
            android:paddingBottom="@dimen/px26"
            android:textColor="#1C1C1C"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/right_btn"
            android:layout_width="@dimen/px48"
            android:layout_height="@dimen/px48"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/px40"
            android:gravity="center"
            android:src="@drawable/pop_ok" />

    </LinearLayout>

    <View
        android:id="@+id/back_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:background="#F1F1F1" />

    <FrameLayout
        android:id="@+id/content_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>